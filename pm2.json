{
	"apps": [{
			"name": "claimer",
			"script": "./claimer.js",
			"node_args": "--max_old_space_size= 1G",
			"exec_mode": "fork",
			"max_memory_restart": "512M",
			"autorestart": true,
			"merge_logs": true,
			"watch": ["./"],
			"watch_options": {
				"usePolling": true
			},
			"env": {
				"NODE_ENV": "production"
			},
			"error_file": "./logs/claimer-err.log",
			"out_file": "./logs/claimer-out.log"
		}
	]
}